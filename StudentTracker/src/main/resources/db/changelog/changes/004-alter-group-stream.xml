<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="5" author="alexey_pritula">
        <addColumn tableName="group_streams">
            <column name="headman" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>

        <dropForeignKeyConstraint baseTableName="schedule"
                                  constraintName="fk_schedule_group"/>

        <addForeignKeyConstraint
                baseTableName="schedule"
                baseColumnNames="group_name"
                constraintName="fk_schedule_group"
                referencedTableName="group_streams"
                referencedColumnNames="group_name"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="group_streams"
                baseColumnNames="headman"
                constraintName="fk_group_headman"
                referencedTableName="students"
                referencedColumnNames="id"
                onDelete="SET NULL"/>
    </changeSet>
</databaseChangeLog>